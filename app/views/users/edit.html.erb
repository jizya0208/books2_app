<h1>User info</h1>

<% if @user.errors.any? %>
  <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @user, local:true do |f| %>
  <label for="user_name">Name</label>
  <%= f.text_field :name, id: "user_name" %>
  <label for="user_image">Image</label>
  <%= f.attachment_field :profile_image, id: "user_image" %>
  <label for="user_introduction">Introduction</label>
  <%= f.text_area :introduction, id: "book_opinion" %>
  <%= f.submit 'UpdateUser' %>
<% end %>

