<p id="notice">
  <%= flash[:notice] %>
</p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-sm-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
  
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user, local:true do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name, id: "user_name", class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
          <%= f.attachment_field :profile_image, id: "user_image", class:"form-control-file" %>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction, id: "book_opinion", class:"form-control" %>
        </div>
        <%= f.submit 'UpdateUser', class:"btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>