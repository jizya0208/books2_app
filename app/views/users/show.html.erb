<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, format:'jpeg', size:'100x100', fallback: 'no_image.jpg' %>
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>


<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>
  <label for="book_title">Title</label>
  <%= f.text_field :title, id:"book_title" %>
  <label for="book_opinion">Opinion</label>
  <%= f.text_area :body, id:"book_opinion" %>
  <%= f.submit 'CreateBook' %>
<% end %>

<h2>Books</h2>
  <table>
    <thead>      
      <tr>
        <th></th> 
        <th>title</th>
        <th>opinion</th>
        <th class="colspan-3"></th>
      </tr>
    </thead>
    <tbody>
      <% @user.books.each do |book| %>
       <tr>
        <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: '50x50' %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>