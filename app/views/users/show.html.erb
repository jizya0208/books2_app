<div class="container px-0 px-sm-0">
  <div class="row">
    <div class="sidebar col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, format:'jpeg', size:'100x100', fallback: 'no_image.jpg' %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
      <% if @user == current_user%>
        <%= link_to edit_user_path(current_user.id),class:"btn btn-block btn-outline-secondary fas fa-user-cog" do %>
          <i></i>
        <% end %>
      <% end %>
      </div>      
      
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, id:"book_title", class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, id:"book_opinion", class:"form-control" %>
        </div>
        <%= f.submit 'Create Book', class:"btn btn-success" %>
      <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>      
          <tr>
            <th></th>      
            <th>Title</th>
            <th>Opinion</th> 
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @user.books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user_id) do %>
                <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: '50x50', fallback: 'no_image.jpg' %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
