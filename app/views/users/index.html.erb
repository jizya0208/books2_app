
  <p id="notice">
    <%= flash[:notice] %>
  </p>

<div class="container px-0 px-sm-0">
  <div class="row">
    <div class="sidebar col-md-3">
      <h2 class>User info</h2>
      <%= attachment_image_tag current_user, :profile_image, format:'jpeg', size:'100x100', fallback: 'no_image.jpg' %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
  
      <div class="row">
        <%= link_to edit_user_path(current_user.id),class:"btn btn-block btn-outline-secondary" do %>
          <i class="fa fa-user-cog"></i>
        <% end %>
      </div>
      
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, id:"book_title", class:"form-control" %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, id:"book_opinion", class:"form-control" %>
      </div>
        <%= f.submit 'CreateBook', class:"btn btn-success" %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <tr>
          <thead>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </thead>
        </tr>
        <tr>
        <% @users.each do |user| %>
          <tbody>
            <td><%= attachment_image_tag user, :profile_image, format:'jpeg', size:'40x40', fallback: 'no_image.jpg' %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user) %></td>
          </tbody>
        <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>