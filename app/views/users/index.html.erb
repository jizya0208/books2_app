<p id="notice">
  <%= flash[:notice] %>
</p>

<div class="container px-0 px-sm-0">
  <div class="row">
    <div class="sidebar col-md-3">
      <%= render 'users/userInfo', user: current_user %>
  
      <div class="row">
        <%= link_to edit_user_path(current_user.id), class:"btn btn-block btn-outline-secondary fas fa-user-cog" do %>
          <i></i>
        <% end %>
      </div>
      
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, id:"book_title", class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, id:"book_opinion", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <tr>
          <thead>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </thead>
        </tr>
        <tr>
        <% @users.each do |user| %>
          <tbody>
            <td>
              <%= link_to user_path(user) do %>
                <%= attachment_image_tag user, :profile_image, format:'jpeg', size:'40x40', fallback: 'no_image.jpg' %>
              <% end %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user) %></td>
          </tbody>
        <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>