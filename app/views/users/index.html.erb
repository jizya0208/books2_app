<h2>Users</h2>

<h2>User info</h2>
  <%= attachment_image_tag current_user, :profile_image, format:'jpeg', size:'100x100', fallback: 'no_image.jpg' %>
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>
  
  <%= link_to '歯車', edit_user_path(current_user) %>
  
<h2>New book</h2>
<%= form_with model: @book, url: books_path, local:true do |f| %>
  <label for="book_title">Title</label>
  <%= f.text_field :title, id:"book_title" %>
  <label for="book_opinion">Opinion</label>
  <%= f.text_area :opinion, id:"book_opinion" %>
  <%= f.submit 'CreateBook' %>
<% end %>

<%= link_to 'ユーザ編集画面', edit_user_path(current_user) %>

<% @users.each do |user| %>
  <%= attachment_image_tag user, :profile_image %>
  <%= user.name %>
  <%= link_to 'Show', user_path(user) %>
<% end %>