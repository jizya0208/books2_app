<h2>Books detail</h2>

<%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', size: '50x50', fallback: 'no_image.jpg' %>
  <%= @book.title %>
  <%= @book.opinion %>
  <% if @book.user_id == current_user.id %>
    <%= link_to 'Edit', edit_book_path(@book) %>
    <%= link_to 'Destroy', book_path(@book), method: :delete %>
  <% end %>


